#! /bin/sh -
#script to compile EMPIRE II package
cd source
make
cd ../util/empend
make
cd ../x4toc4
make
cd ../c4sort
make
cd ../plotc4
make
cd ../fixup
make
cd ../sixtab
make
cd ../lsttab
make
cd ../pltlst
make
cd ../legend
make
cd ../endres
make
cd ../linear
make
cd ../recent
make
cd ../sigma1
make
cd ../c4zvd
make -f c4dat4l.mak
make -f datzvdl.mak
make -f endzvdl.mak
make -f curzvd3l.mak
make -f pntdatl.mak
chmod a+x pntzvdl
if [ -d file ../kalman ]; then
   cd ../kalman
   make kalman3
   make kalend
   make c4tokal
fi
cd ../resonance
make all
cd ../../EXFOR
make
cd ../
exit
